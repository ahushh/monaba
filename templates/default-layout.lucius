/* ********************************* */
/* ************* Icons ************* */
/* ********************************* */
[class^="icon-"], [class*=" icon-"] {
    background-image: url("/static/img/glyphicons-black.png");
    vertical-align: text-top;
    background-repeat: no-repeat;
    display: inline;
    height: 14px;
    line-height: 14px;
    margin-top: 1px;
    width: 14px;
    cursor: pointer;
}

.icon-close-popup-all {
    background-position: -1085px -77px;
}

.icon-close-popup-one {
    background-position: -29px -101px;
}

.icon-thread-sticked {
    background-position: -989px -149px;
}

.icon-thread-locked {
    background-position: -173px -101px;
}

.icon-thread-autosage {
    background-position: -389px -101px;
}

.icon-sage {
    background-position: -389px -101px;
    cursor: auto;
}

.icon-hide-thread {
    background-position: -1061px -77px;
    float: right;
}

.no-js .icon-hide-thread {
    display: none;
}

.icon-show-thread {
    float: right;
    background-position: -1037px -77px;
}

.icon-hide-thread-completely {
    float: right;
    background-position: -77px -29px;
}

.no-js .icon-hide-thread-completely {
    display: none;
}

.icon-reply {
    background-position: -605px -173px;
}

.no-js .icon-reply {
    display: none;
}

.show-plain-form {
    display:none;
    text-align: center;
}

.icon-thread-refresh {
    background-position: -773px -29px;
}

.icon-edit-post {
    background-position: -77px -77px;
}

.no-js .icon-edit-post {
    display: none;
}

.icon-close {
    background-position: -269px -101px;
}

.icon-del-post {
    background-position: -269px -101px;
    opacity: 0.3;
}

.no-js .icon-del-post {
    display: none;
}

.icon-eye-open {
    background-position: -53px -29px;
    cursor: auto;
}

.icon-play {
    background-position: -629px -77px;
    margin-right: 3px;
}
/* *************************************** */
/* **************** Header *************** */
/* *************************************** */
.js #control-panel, .js #board-list, .no-js .top-bar {
    display: none
}

.board-list {
    text-align: left;
}

#control-panel {
    float: right;
    text-align: right;
}

/* *************************************** */
/* ****************  *************** */
/* *************************************** */
.thread {
    height: auto;
    overflow: visible;
    clear: both;
}

.thread {
    /* margin: 2px; */
    border-top: 1px solid rgba(10, 10, 10, 0.3);
    padding: 25px 2px;
}

.reply-post, .op-post {
    /* margin: 3px; */
    /* padding: 5px; */
}

.multi-file {
    vertical-align: top;
    display: inline-block;
    margin: 7px;
}

.file {
    margin: 7px 14px 7px 7px;
    float: left;
}

.thumb {
    margin: 6px;
    cursor: pointer;
    display: block;
}

