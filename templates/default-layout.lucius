* {
    margin: 0;
}

html, body {
    height: 100%;
}

#wrap {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -4em;
}

footer, .push {
    text-align: center;
    height: 4em;
}

#message {
    margin: 0 !important;
}

